#include "ctype.h"
const int ledPin = 13;
 char stringA[4] ; 
 String keke = "234";
 String tata = "katana";
 char stringB [5]; 
 int done = 0;
 int counter = 0;
void setup() 
{
  pinMode(ledPin, OUTPUT);
  Serial.begin(9600);
  while (! Serial); // Wait until Serial is ready - Leonardo
  Serial.println("Enter LED Number 0 to 7 or 'x' to clear");
}

void loop() 
{
  if (Serial.available())
  {
    char ch = Serial.read();
    if (ch == 'x')
    {
      digitalWrite(ledPin,HIGH);
      Serial.println("Cleared");
            if (isdigit(ch) == 1)
      {
        Serial.println ("yes");
      }
      else
      {
        Serial.println("no");
      }
    }
    else if ( ch == 'b')
    {
        Serial.println("please input string");
        counter = 0;
        done = 0;
        while(done == 0)
        {
          ch = Serial.read();
          if(isdigit(ch) == 1)
          {
          stringB[counter] = ch;
          counter++;
          Serial.println("1");
          }
          else if (isAlpha(ch) == 1)
          {
            if (ch == 'q')
            {
              Serial.println("done input");
              done = 1;
            }
          }
        }
        stringB[counter] = '\0';
        Serial.println("done, string is");
        Serial.println(stringB);
        if (strcmp(stringB, "234") == 0)
        {
          Serial.println("euqla");
        }
        else
        {
          Serial.println("not equal");
        }
        int a = 100 + keke.toInt();
        Serial.println("calcultion is ");
        Serial.println(a);
        if (a == 334)
        {
          Serial.println("is 334");
        }
        else 
        {
          Serial.println("not 334");
        }

        int b = atoi(stringB);
        Serial.println("converted string ma is ");
        Serial.println(b);
        if (b == 500)
        {
          Serial.println("is 500");
        }
        else 
        {
          Serial.println("not 500");
        }
       
    }
    else if (ch == '1')
    {
      if (isdigit(ch) == 1)
      {
        Serial.println ("yes");
      }
      else
      {
        Serial.println("no");
      }
      digitalWrite(ledPin,LOW);
    }
  }
}
