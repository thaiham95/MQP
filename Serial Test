#include "ctype.h"
const int ledPin = 13;
 char stringA[4] ; 
 String keke = "234";
 String tata = "katana"; 
void setup() 
{
  pinMode(ledPin, OUTPUT);
  Serial.begin(9600);
  while (! Serial); // Wait until Serial is ready - Leonardo
  Serial.println("Enter LED Number 0 to 7 or 'x' to clear");
}

void loop() 
{
  if (Serial.available())
  {
    char ch = Serial.read();
    if (ch == 'x')
    {
      digitalWrite(ledPin,HIGH);
      Serial.println("Cleared");
            if (isdigit(ch) == 1)
      {
        Serial.println ("yes");
      }
      else
      {
        Serial.println("no");
      }
    }
    else if ( ch == 'b')
    {
        Serial.println("please input string");
        int data = 0;
        while(data < 3)
        {
          ch = Serial.read();
          if(isdigit(ch) == 1)
          {
          stringA[data] = ch;
          data++;
          Serial.println("1");
          }
        }
        stringA[3] = '\0';
        Serial.println("done");
        Serial.println(stringA);
        if (strcmp(stringA, "234") == 0)
        {
          Serial.println("euqla");
        }
        else
        {
          Serial.println("not equal");
        }
        int a = 100 + keke.toInt();
        Serial.println("calcultion is ");
        Serial.println(a);
        if (a == 334)
        {
          Serial.println("is 334");
        }
        else 
        {
          Serial.println("not 334");
        }

        int b = atoi(stringA);
        Serial.println("converted string ma is ");
        Serial.println(b);
        if (b == 500)
        {
          Serial.println("is 500");
        }
        else 
        {
          Serial.println("not 500");
        }
       
    }
    else if (ch == '1')
    {
      if (isdigit(ch) == 1)
      {
        Serial.println ("yes");
      }
      else
      {
        Serial.println("no");
      }
      digitalWrite(ledPin,LOW);
    }
  }
}
